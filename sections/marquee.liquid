{{ 'section-marquee.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .marquee-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .marquee-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .marquee-{{ section.id }} {
    --marquee-speed: {{ section.settings.speed }}s;
    --marquee-gap: {{ section.settings.gap }}px;
  }

  .marquee-{{ section.id }} .marquee__content {
    animation-duration: var(--marquee-speed);
    {%- if section.settings.direction == 'reverse' -%}
      animation-direction: reverse;
    {%- else -%}
      animation-direction: normal;
    {%- endif -%}
  }

  {%- if section.settings.pause_on_hover -%}
    .marquee-{{ section.id }}:hover .marquee__content {
      animation-play-state: paused;
    }
  {%- endif -%}
{%- endstyle -%}

<div class="marquee-section-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="marquee-wrapper page-width">
    {%- if section.settings.heading != blank -%}
      <div class="marquee__header{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <h2 class="marquee__heading {{ section.settings.heading_size }}">
          {{ section.settings.heading | escape }}
        </h2>
      </div>
    {%- endif -%}

    <div class="marquee-{{ section.id }} marquee marquee--{{ section.settings.style }}" role="region" aria-label="{{ section.settings.accessibility_label | default: 'Marquee' }}">
      <div class="marquee__container">
        <div class="marquee__content">
          {%- for block in section.blocks -%}
            <div class="marquee__item" {{ block.shopify_attributes }}>
              {%- case block.type -%}
                {%- when 'text' -%}
                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" class="marquee__link">
                  {%- endif -%}
                  <span class="marquee__text" style="font-size: {{ block.settings.text_size }}px; color: {{ block.settings.text_color }};">
                    {{ block.settings.text | escape }}
                  </span>
                  {%- if block.settings.link != blank -%}
                    </a>
                  {%- endif -%}
                {%- when 'image' -%}
                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" class="marquee__link">
                  {%- endif -%}
                  <div class="marquee__image-wrapper" style="width: {{ block.settings.image_width }}px; height: {{ block.settings.image_height }}px;">
                    {%- if block.settings.image != blank -%}
                      {{
                        block.settings.image
                        | image_url: width: block.settings.image_width | times: 2
                        | image_tag: loading: 'lazy', alt: block.settings.image.alt | escape, class: 'marquee__image'
                      }}
                    {%- else -%}
                      {{ 'image' | placeholder_svg_tag: 'marquee__placeholder' }}
                    {%- endif -%}
                  </div>
                  {%- if block.settings.link != blank -%}
                    </a>
                  {%- endif -%}
                {%- when 'icon' -%}
                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" class="marquee__link">
                  {%- endif -%}
                  <div class="marquee__icon-wrapper" style="width: {{ block.settings.icon_size }}px; height: {{ block.settings.icon_size }}px; color: {{ block.settings.icon_color }};">
                    {%- if block.settings.icon_svg != blank -%}
                      {{ block.settings.icon_svg }}
                    {%- else -%}
                      <svg viewBox="0 0 24 24" fill="currentColor">
                        <circle cx="12" cy="12" r="10"/>
                      </svg>
                    {%- endif -%}
                  </div>
                  {%- if block.settings.link != blank -%}
                    </a>
                  {%- endif -%}
              {%- endcase -%}
            </div>
          {%- endfor -%}
          {%- comment -%} Duplicate content for seamless loop {%- endcomment -%}
          {%- for block in section.blocks -%}
            <div class="marquee__item" aria-hidden="true">
              {%- case block.type -%}
                {%- when 'text' -%}
                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" class="marquee__link">
                  {%- endif -%}
                  <span class="marquee__text" style="font-size: {{ block.settings.text_size }}px; color: {{ block.settings.text_color }};">
                    {{ block.settings.text | escape }}
                  </span>
                  {%- if block.settings.link != blank -%}
                    </a>
                  {%- endif -%}
                {%- when 'image' -%}
                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" class="marquee__link">
                  {%- endif -%}
                  <div class="marquee__image-wrapper" style="width: {{ block.settings.image_width }}px; height: {{ block.settings.image_height }}px;">
                    {%- if block.settings.image != blank -%}
                      {{
                        block.settings.image
                        | image_url: width: block.settings.image_width | times: 2
                        | image_tag: loading: 'lazy', alt: block.settings.image.alt | escape, class: 'marquee__image'
                      }}
                    {%- else -%}
                      {{ 'image' | placeholder_svg_tag: 'marquee__placeholder' }}
                    {%- endif -%}
                  </div>
                  {%- if block.settings.link != blank -%}
                    </a>
                  {%- endif -%}
                {%- when 'icon' -%}
                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" class="marquee__link">
                  {%- endif -%}
                  <div class="marquee__icon-wrapper" style="width: {{ block.settings.icon_size }}px; height: {{ block.settings.icon_size }}px; color: {{ block.settings.icon_color }};">
                    {%- if block.settings.icon_svg != blank -%}
                      {{ block.settings.icon_svg }}
                    {%- else -%}
                      <svg viewBox="0 0 24 24" fill="currentColor">
                        <circle cx="12" cy="12" r="10"/>
                      </svg>
                    {%- endif -%}
                  </div>
                  {%- if block.settings.link != blank -%}
                    </a>
                  {%- endif -%}
              {%- endcase -%}
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>

