{{ 'section-marquee.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign marquee_speed = section.settings.speed
  assign marquee_gap = section.settings.gap
  assign marquee_direction = section.settings.direction
  assign marquee_style = section.settings.style
  assign marquee_vertical = section.settings.vertical
-%}

<div
  class="marquee-wrapper color-{{ section.settings.color_scheme }} gradient"
  style="
    --marquee-speed: {{ marquee_speed }}s;
    --marquee-gap: {{ marquee_gap }}px;
    {% if marquee_direction == 'reverse' %}direction: rtl;{% endif %}
  "
>
  {%- if section.settings.heading != blank -%}
    <div class="marquee__header page-width">
      <h2 class="marquee__heading {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
      {%- if section.settings.subheading != blank -%}
        <p class="marquee__subheading">
          {{ section.settings.subheading }}
        </p>
      {%- endif -%}
    </div>
  {%- endif -%}

  <div
    class="marquee page-width{% if marquee_vertical %} marquee--vertical{% endif %} marquee--{{ marquee_style }}"
  >
    <div class="marquee__container">
      {%- for i in (1..2) -%}
        <div class="marquee__content" aria-busy="false">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'text_item' -%}
                <div class="marquee__item" {{ block.shopify_attributes }}>
                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" class="marquee__link">
                      <span class="marquee__text">
                        {{ block.settings.text | escape }}
                      </span>
                    </a>
                  {%- else -%}
                    <span class="marquee__text">
                      {{ block.settings.text | escape }}
                    </span>
                  {%- endif -%}
                </div>

              {%- when 'image_item' -%}
                <div class="marquee__item" {{ block.shopify_attributes }}>
                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" class="marquee__link">
                  {%- endif -%}

                  <div
                    class="marquee__image-wrapper"
                    style="
                      width: {{ block.settings.image_width }}px;
                      height: {{ block.settings.image_height }}px;
                    "
                  >
                    {%- if block.settings.image != blank -%}
                      {{
                        block.settings.image
                        | image_url: width: block.settings.image_width
                        | image_tag:
                          class: 'marquee__image',
                          widths: '100, 200, 300, 400, 600',
                          sizes: 'auto'
                      }}
                    {%- else -%}
                      <div class="marquee__placeholder">
                        {{ 'image' | placeholder_svg_tag }}
                      </div>
                    {%- endif -%}
                  </div>

                  {%- if block.settings.link != blank -%}
                    </a>
                  {%- endif -%}
                </div>

              {%- when 'icon_item' -%}
                <div class="marquee__item" {{ block.shopify_attributes }}>
                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" class="marquee__link">
                  {%- endif -%}

                  <div
                    class="marquee__icon-wrapper"
                    style="
                      width: {{ block.settings.icon_size }}px;
                      height: {{ block.settings.icon_size }}px;
                    "
                  >
                    {%- render block.settings.icon_snippet -%}
                  </div>

                  {%- if block.settings.link != blank -%}
                    </a>
                  {%- endif -%}
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Marquee",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Scrolling marquee"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Showcase messages, logos, or promotions in a continuous scroll."
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h2", "label": "Medium" },
        { "value": "h1", "label": "Large" },
        { "value": "h0", "label": "Extra large" }
      ],
      "default": "h1"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "speed",
      "label": "Scroll speed (seconds, lower = faster)",
      "min": 5,
      "max": 60,
      "step": 1,
      "unit": "s",
      "default": 30
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Item gap (px)",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "select",
      "id": "direction",
      "label": "Scroll direction",
      "options": [
        { "value": "left", "label": "Left to right" },
        { "value": "right", "label": "Right to left" }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "style",
      "label": "Animation style",
      "options": [
        { "value": "continuous", "label": "Continuous loop" },
        { "value": "bounce", "label": "Back and forth" }
      ],
      "default": "continuous"
    },
    {
      "type": "checkbox",
      "id": "vertical",
      "label": "Vertical scroll",
      "default": false,
      "info": "Use vertical scrolling instead of horizontal."
    }
  ],
  "blocks": [
    {
      "type": "text_item",
      "name": "Text item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Your marquee text here"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Optional link"
        }
      ]
    },
    {
      "type": "image_item",
      "name": "Image item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "label": "Image width (px)",
          "min": 20,
          "max": 400,
          "step": 10,
          "unit": "px",
          "default": 120
        },
        {
          "type": "range",
          "id": "image_height",
          "label": "Image height (px)",
          "min": 20,
          "max": 400,
          "step": 10,
          "unit": "px",
          "default": 60
        },
        {
          "type": "url",
          "id": "link",
          "label": "Optional link"
        }
      ]
    },
    {
      "type": "icon_item",
      "name": "Icon snippet item",
      "settings": [
        {
          "type": "text",
          "id": "icon_snippet",
          "label": "Icon snippet name",
          "info": "Name of a snippet to render, e.g. 'icon-star'."
        },
        {
          "type": "range",
          "id": "icon_size",
          "label": "Icon size (px)",
          "min": 16,
          "max": 200,
          "step": 4,
          "unit": "px",
          "default": 40
        },
        {
          "type": "url",
          "id": "link",
          "label": "Optional link"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Marquee",
      "blocks": [
        {
          "type": "text_item",
          "settings": {
            "text": "Free shipping on all orders"
          }
        },
        {
          "type": "text_item",
          "settings": {
            "text": "New arrivals dropping weekly"
          }
        },
        {
          "type": "text_item",
          "settings": {
            "text": "Join our rewards program"
          }
        }
      ]
    }
  ]
}
{% endschema %}


